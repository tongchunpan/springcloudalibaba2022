<?xml version="1.0" encoding="UTF-8"?>
         <!DOCTYPE mapper
         PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
         "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tong.dao.PaymentMapper">

    <insert id="create" parameterType="com.tong.pojo.PaymentDO" >
        insert into payment (serial) values (#{serial});
    </insert>

    <select id="getPaymentById" parameterType="int" resultMap="paymen">
        select * from payment where id = #{id};
    </select>

    <resultMap id="paymen" type="com.tong.pojo.PaymentDO" >
        <id column="id" property="id"/>
        <result column="serial" property="serial"/>
    </resultMap>




</mapper>